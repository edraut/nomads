<h1>Listing item_colors</h1>

<table>
  <tr>
    <th>Item</th>
    <th>Color</th>
  </tr>

<% for item_color in @item_colors %>
  <tr>
    <td><%=h item_color.item_id %></td>
    <td><%=h item_color.color_id %></td>
    <td><%= link_to 'Show', item_color %></td>
    <td><%= link_to 'Edit', edit_item_color_path(item_color) %></td>
    <td><%= link_to 'Destroy', item_color, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item_color', new_item_color_path %>
