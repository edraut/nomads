<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>User name</th>
    <th>Type</th>
    <th>Email</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.user_name %></td>
    <td><%=h user.type %></td>
    <td><%=h user.email %></td>
    <td><%= link_to 'Show', user_path(user) %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user_path(user), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

