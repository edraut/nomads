<h1></h1>
<h1>Listing sizes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
  </tr>

<% for size in @sizes %>
  <tr>
    <td><%=h size.name %></td>
    <td><%=h size.type %></td>
    <td><%= link_to 'Show', [:admin, size] %></td>
    <td><%= link_to 'Edit', edit_admin_size_path(size) %></td>
    <td><%= link_to 'Delete', [:admin, size], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

