<h1>Editing campaign_text_block</h1>

<% form_for(@campaign_text_block) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @campaign_text_block %> |
<%= link_to 'Back', campaign_text_blocks_path %>
